		},
		{
			"name": "Authentication",
			"item": [
				{
					"name": "Login",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"username\": \"{{username}}\",\n    \"password\": \"{{password}}\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/v1/auth/login",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"v1",
								"auth",
								"login"
							]
						},
						"description": "用户登录获取访问令牌"
					},
					"response": []
				},
				{
					"name": "Refresh Token",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"refresh_token\": \"{{refresh_token}}\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/v1/auth/refresh",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"v1",
								"auth",
								"refresh"
							]
						},
						"description": "刷新访问令牌"
					},
					"response": []
				},
				{
					"name": "Logout",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{access_token}}",
								"type": "text"
							}
						],
						"url": {
							"raw": "{{base_url}}/v1/auth/logout",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"v1",
								"auth",
								"logout"
							]
						},
						"description": "用户登出"
					},
					"response": []
				}
			],
			"description": "认证相关API"
		}
	],
	"event": [
		{
			"listen": "prerequest",
			"script": {
				"type": "text/javascript",
				"exec": [
					"// 自动设置认证头",
					"if (pm.environment.get('access_token')) {",
					"    pm.request.headers.add({",
					"        key: 'Authorization',",
					"        value: 'Bearer ' + pm.environment.get('access_token')",
					"    });",
					"}",
					"",
					"// 记录请求日志",
					"console.log('Request:', pm.request.method, pm.request.url);"
				]
			}
		},
		{
			"listen": "test",
			"script": {
				"type": "text/javascript",
				"exec": [
					"// 自动保存认证令牌",
					"if (pm.response.code === 200) {",
					"    const responseJson = pm.response.json();",
					"    if (responseJson.access_token) {",
					"        pm.environment.set('access_token', responseJson.access_token);",
					"    }",
					"    if (responseJson.refresh_token) {",
					"        pm.environment.set('refresh_token', responseJson.refresh_token);",
					"    }",
					"    if (responseJson.account_id) {",
					"        pm.environment.set('account_id', responseJson.account_id);",
					"    }",
					"}",
					"",
					"// 响应状态检查",
					"pm.test('Status code is 200', function () {",
					"    pm.response.to.have.status(200);",
					"});",
					"",
					"// 响应时间检查",
					"pm.test('Response time is less than 2000ms', function () {",
					"    pm.expect(pm.response.responseTime).to.be.below(2000);",
					"});",
					"",
					"// JSON格式检查",
					"pm.test('Response is JSON', function () {",
					"    pm.response.to.be.json;",
					"});"
				]
			}
		}
	],

		{
			"name": "Account Management",
			"item": [
				{
					"name": "Create Account",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{access_token}}",
								"type": "text"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"name\": \"test-account\",\n    \"email\": \"test@example.com\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/v1/account",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"v1",
								"account"
							]
						},
						"description": "创建新的同步账户"
					},
					"response": []
				},
				{
					"name": "Get Account List",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{access_token}}",
								"type": "text"
							}
						],
						"url": {
							"raw": "{{base_url}}/v1/accounts?page=1&size=10",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"v1",
								"accounts"
							],
							"query": [
								{
									"key": "page",
									"value": "1"
								},
								{
									"key": "size",
									"value": "10"
								}
							]
						},
						"description": "获取账户列表，支持分页"
					},
					"response": []
				},
				{
					"name": "Get Account by ID",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{access_token}}",
								"type": "text"
							}
						],
						"url": {
							"raw": "{{base_url}}/v1/account/{{account_id}}",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"v1",
								"account",
								"{{account_id}}"
							]
						},
						"description": "根据ID获取账户详细信息"
					},
					"response": []
				},
				{
					"name": "Update Account",
					"request": {
						"method": "PUT",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{access_token}}",
								"type": "text"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"name\": \"updated-account-name\",\n    \"email\": \"updated@example.com\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/v1/account/{{account_id}}",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"v1",
								"account",
								"{{account_id}}"
							]
						},
